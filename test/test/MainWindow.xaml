        </Button>
        <Button Margin="550,258,138,0"
                Click="Button_Click"
                Height="32"
                VerticalAlignment="Top">
            Student
        </Button>
        <Button x:Name="button1"
                Width="auto"
                Click="button1_Click"
                Margin="415,306,285,57">
            Room
        </Button>
