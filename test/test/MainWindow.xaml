                 x:Name="textbox_name_price"
                 BorderBrush="Red"
                 BorderThickness="3,3,3,3"
                 Foreground="Purple"
                 Background="#FF72BFD4"
                 TextWrapping="WrapWithOverflow"
                 Height="89"
                 VerticalAlignment="Top">
            Введите имя студента/стоимость
        </TextBox>
        <TextBox Margin="214,321,432,0"
                 x:Name="textbox_number"
                 BorderBrush="Red"
                 BorderThickness="3,3,3,3"
                 Foreground="Purple"
                 Background="#FF72BFD4"
                 Text="Введите номер комнаты"
                 TextWrapping="WrapWithOverflow"
                 Height="85"
                 VerticalAlignment="Top" />
