                Background="#1a33ed"
                Height="32"
                Width="207"
                Margin="277,196,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Click="Button_Click_3">Добавить мебель студента</Button>
        <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                Background="#1a33ed"
                Height="32"
                Width="227"
                Margin="511,196,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Click="Button_Click_3">Добавить мебель в комнату</Button>
